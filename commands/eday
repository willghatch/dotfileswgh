#!/usr/bin/env bash

if [[ "$1" = "--help" ]]; then
    echo "usage: $0 [today or yesterday or tomorrow]"
    exit 1
fi

day="${1:-today}"

if [[ today = "$day" ]]; then
    exec e $(date +%Y-%m-%d)
elif [[ yesterday = "$day" ]]; then
    exec e $(date +%Y-%m-%d --date=yesterday)
elif [[ tomorrow = "$day" ]]; then
    exec e $(date +%Y-%m-%d --date=tomorrow)
else
    echo "usage: $0 [today or yesterday or tomorrow]"
    exit 1
fi


