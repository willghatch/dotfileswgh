#!/usr/bin/env racket
#lang racket/base
(require
 gregor
 racket/cmdline
 "../racket-libs/exec/main.rkt"
 )

(define specs
  (command-line #:args specs
                specs))

(define week-ns (if (null? specs)
                    '(0)
                    (map string->number specs)))

(define ts (map (位 (week-n) (+weeks (today) week-n)) week-ns))

(define start-of-week (map (位 (t) (-days t (->wday t))) ts))
(define end-of-week (map (位 (t) (+days t (- 6 (->wday t)))) ts))

(define (date->str d)
  (~t d "YYYY-MM-dd"))

(define filenames (map (位 (start-of-week end-of-week)
                         (format "~a_to_~a.org"
                                 (date->str start-of-week)
                                 (date->str end-of-week)))
                       start-of-week
                       end-of-week))


(apply execv (find-executable-path "e") filenames)
