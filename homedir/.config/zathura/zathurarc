
map j scroll half-down
map k scroll half-up
map J scroll down
map K scroll up
map r recolor
map R rotate
map <C-r> reload

set recolor-darkcolor "#DDDDDD"
set recolor-lightcolor "#111111"
set recolor true

set scrollbar-fg "#333333"

# use CLIPBOARD, not PRIMARY
set selection-clipboard clipboard

# guioptions --
# c = command line
# s = statusbar
# h = vertical scrollbar
# v = horizontal scrollbar
set guioptions cshv

