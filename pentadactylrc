"1.1

loadplugins '\.(js|penta)$'
group user

map -count -modes=i jk <Esc>
map -count -modes=i kj <Esc>

map -count -modes=n -ex w tabnext
map -count -modes=n -ex b tabprevious
" go to buffer -- was on b, which I switched to be tabp
map -count -modes=n -builtin gb b
map -count -modes=n -ex gm bmarks

" this is somewhat heretical, but I don't want a to be for bookmarks...
map -count -modes=n -builtin a i

" switch f to open a new tab and F to load in current
map -count -builtin -modes=n f F
map -count -builtin -modes=n F f

" switch yanks -- now capital is for current URL, lowercase is selection or current word
map -count -builtin -modes=n y Y
map -count -builtin -modes=n Y y

map -count -builtin -modes=v c s

map -count -builtin -modes=n <Space> <Nop>
map -count -builtin -modes=n <Space>h <PageDown>
map -count -builtin -modes=n <Space>t <PageUp>
map -count -builtin -modes=n <Space>j 20j
map -count -builtin -modes=n <Space>k 20k
" These are half-page scrollers
map -count -builtin -modes=n J <C-d>
map -count -builtin -modes=n K <C-u>

" s-map -- make ss do what S did - search in new tab
map -builtin -modes=n s <Nop>
map -builtin -modes=n ss S
map -builtin -modes=n S s
map -builtin -modes=n sm m
map -builtin -modes=n sh :!
map -modes=n -ex sa bmark

" t-map
map -builtin -modes=n t <Nop>
map -builtin -modes=n tt t 
" tab switch
map -builtin -modes=n tb b 
map -builtin -modes=n tgs :tgroup-switch 
map -builtin -modes=n tgn :tgroup-new 
map -builtin -modes=n tgd :tgroup-delete 
map -builtin -modes=n tgm :tgroup-move 
map -builtin -modes=n tgg :tgroup-get 
map -builtin -modes=n tgo :tgroup-open 
map -builtin -modes=n tgt :tgroup-title 

map -builtin -modes=n,v,c <C-g> <Esc>

" keep the menu bars, address bar...
set guioptions=bCrsT
" Use text-edit-mode rather than input mode
"set noinsertmode

map -builtin -modes=n -- - :
" zoom in/out is still on zi/zo

set hintkeys='aoeuhtnsidpgcrmk'
" do not require <CR> when in hints mode
"set followhints=0
"set hinttimeout=0


"source $DOTFILESDIR/pentadactyl.user.css
highlight -append Hint font:2em; font-weight:bold; color: #55ffff; background-color: #102030; font-family: Courier, monospace;
highlight -append Hint[active] font:2em; font-weight:bold; color: #000000; background-color: #55ffff; font-family: Courier, monospace;

set runtimepath+="$DOTFILESDIR/external/pentadactyl/"

" vim: set ft=pentadactyl:
