    <mapping keycode="19" note="57"/>
    <mapping keycode="20" note="59"/>
    <mapping keycode="21" note="61"/>
    <mapping keycode="22" note="63"/>
    <!-- Upper Row, starting with Q, ending with right bracket: keycodes 24-35, even note numbers -->
    <mapping keycode="24" note="40"/>
    <mapping keycode="25" note="42"/>
    <mapping keycode="26" note="44"/>
    <mapping keycode="27" note="46"/>
